{
  "name": "@ghadyani-framework/websocket",
  "version": "2.2.0",
  "description": "Utilities for creating applications using WebSockets.",
  "license": "MITNFA",
  "scripts": {
    "debug": "nodemon --inspect app.js",
    "lint": "node app.js lint",
    "lint:watch": "nodemon app.js lint",
    "start": "yarn && nodemon app.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "engines": {
    "node": ">=8.11.4",
    "yarn": ">=1.6.0"
  },
  "_moduleAliases": {
    "$redux": "./redux",
    "$utils": "./utils"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    },
    "files": [
      "redux/**/*.test.js",
      "utils/**/*.test.js"
    ],
    "sources": [
      "**/*.js"
    ]
  },
  "dependencies": {
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@ghadyani-framework/node": "^2.4.0",
    "@ghadyani-framework/redux-utils": "^0.2.0"
  },
  "peerDependencies": {
    "@ghadyani-framework/node": ">=2.1.0 <3",
    "@ghadyani-framework/redux-utils": ">=0.1.1 <1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.0",
    "utf-8-validate": "^5.0.1"
  }
}
